version: '3.8'

services:
  kafka:
    image: confluentinc/cp-kafka:7.4.0
    container_name: kafka
    ports:
      - "9092:9092"
    env_file:
      - .env
    environment:
      KAFKA_ENABLE_KRAFT: "true"
      KAFKA_NODE_ID: "1"
      KAFKA_PROCESS_ROLES: "broker,controller"
      KAFKA_CONTROLLER_QUORUM_VOTERS: "1@kafka:9093"
      KAFKA_LISTENERS: "INTERNAL://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093,EXTERNAL://0.0.0.0:19092"
      KAFKA_ADVERTISED_LISTENERS: "INTERNAL://kafka:9092,EXTERNAL://45.77.22.39:9092"
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: "CONTROLLER:PLAINTEXT,INTERNAL:PLAINTEXT,EXTERNAL:PLAINTEXT"
      KAFKA_INTER_BROKER_LISTENER_NAME: "INTERNAL"
      KAFKA_CONTROLLER_LISTENER_NAMES: "CONTROLLER"
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: "1"
      KAFKA_HEAP_OPTS: "-Xmx512m -Xms256m"
      CLUSTER_ID: "CmCBBf8dR-mZw1wmpoTTHA"
      KAFKA_LOG_CLEANER_ENABLE: "true"
      KAFKA_LOG4J_LOGGERS: "org.apache.kafka.image.loader.MetadataLoader=warn"
    volumes:
      - kafka-data:/var/lib/kafka/data
      - kafka-metadata:/var/lib/kafka/metadata
      - ./server.properties:/etc/kafka/server.properties
    networks:
      kafka-net:
        aliases:
          - kafka

  tradingpairs:
    build:
      context: .
      dockerfile: Dockerfile.binance.fetchpairs
    command: python main_tradingpairs.py
    container_name: tradingpairs    
    environment:
      MYSQL_HOST: 172.17.0.1
      MYSQL_PORT: 3306      
    networks:
      - kafka-net

  producer:
    build:
      context: .
      dockerfile: Dockerfile.binance.consumer
    container_name: producer
    command: python main_producer.py
    environment:
      KAFKA_BOOTSTRAP_SERVERS: kafka:9092
      MYSQL_HOST: host.docker.internal
      MYSQL_PORT: 3306
    depends_on:
      - kafka
      - tradingpairs
    networks:
      - kafka-net

  consumer:
    build:
      context: .
      dockerfile: Dockerfile.binance.producer
    container_name: consumer
    extra_hosts:
      - "host.docker.internal:172.17.0.1"
    environment:
      KAFKA_BOOTSTRAP_SERVERS: kafka:9092
      MYSQL_HOST: host.docker.internal
      MYSQL_PORT: 3306
      MYSQL_USER: udock
      MYSQL_PASSWORD: Admin@12345
      MYSQL_DATABASE: dbcandles
    depends_on:
      - kafka
      - producer
    networks:
      - kafka-net

volumes:
  kafka-data:
  kafka-metadata:

networks:
  kafka-net:
    driver: bridge
  default:
    driver: bridge